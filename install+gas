    echo ""
    echo "1) Запустить мониторинг газа и майнера"
    echo "2) Редактировать конфиг (nano)"
    echo "3) Выход"
    read -p "Выберите действие: " choice
    case $choice in
        1)
            # Запуск мониторинга газа
            while true; do
                # Получаем текущую цену газа из mempool.space
                gas_price=$(curl -s https://memp_
